<main class="container centered">
  <article>
    <hgroup>
      <h2>Log In</h2>
    </hgroup>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "field" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "field" %>

      <% if devise_mapping.rememberable? %>
        <div class="field-box">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </article>
</main>
